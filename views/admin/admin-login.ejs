<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mobiworld - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin css/adminlogin.css">
</head>
<body>
    <div class="login-container">
        <div class="row g-0">
            <!-- Logo Section -->
            <div class="col-md-6 login-banner">
                <div class="logo-container">
                    <img style="height: 375px;" src="\images\MobiWorld logo.jpg" class="logo" alt="Mobiworld Logo">
                </div>
            </div>
            
            <!-- Form Section -->
            <div class="col-md-6">
                <div class="form-container">
                    <h1 class="login-title">Login</h1>
                    
                    <form method="post" action="/admin/login">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="">
                        </div>
                        
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <% if (message) { %>
                            <p class="error-message" id="mess"><%= message %></p> 
                        <% } %>
                        <button type="submit" class="btn btn-login">Log in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const mess = document.getElementById('mess')
        setTimeout(() => {
            if(mess){
                mess.style.display = "none"
            }
        }, 3000);
    </script>
</body>
</html>