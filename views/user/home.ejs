




<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
	<%- include("../../views/partials/user/header") %>
    <section class="mobile-collections">
		<div class="container">
			<div class="row align-items-center">
				<!-- Phone Showcase Area -->
				<div class="col-lg-8 col-md-7">
					<div class="row">
						<div class="col-4 phone-container">
							<img style="height: 270px;"src="images/91wPh6RMcdL._AC_UY327_FMwebp_QL65_.webp" alt="Honor 200 Pro" class="phone-image">
						</div>
						<div class="col-4 phone-container">
							<img  src="images/711G25h1U1L._AC_CR0_0_0_0_SX615_SY462_-removebg-preview.png" alt="Samsung Phone" class="phone-image">
						</div>
						<div class="col-4 phone-container">
							<img style="height:270px;" src="images/61giwQtR1qL._AC_UY327_FMwebp_QL65_.webp" alt="iPhone Pro" class="phone-image">
						</div>
					</div>
				</div>
				
				<!-- Text Information Area -->
				<div class="col-lg-4 col-md-5 collection-info">
					<h2 class="collection-title">LATEST<br>MOBILE COLLECTIONS</h2>
					<p class="collection-desc">Unlock the ultimate connectivity experience! The mobile phone of your dreams is now just a tap away</p>
					<button class="discover-btn">Discover Now</button>
					<div>
						<img src="/images/mobiworld-removebg-preview.png" alt="Mobi World Logo" class="brand-logo">
					</div>
				</div>
			</div>
		</div>
	</section>
	 
	<section class="features-section">
		<div class="container">
			<div class="row">
				<!-- Free Shipping Feature -->
				<div class="col-md-4">
					<div class="feature-box">
						<img src="images/shopping-bag-and-gift-line-style-icon-vector-31447479-removebg-preview.png" alt="Free Shipping" class="feature-icon">
						<h3 class="feature-title">Free Shipping</h3>
						<p class="feature-text">Every package tells a story, and every gift is a treasure waiting to be unwrapped.</p>
					</div>
				</div>
				
				<!-- Customer Support Feature -->
				<div class="col-md-4">
					<div class="feature-box">
						<img src="images/images__2_-removebg-preview.png" alt="Support Customer" class="feature-icon">
						<h3 class="feature-title">Support Customer</h3>
						<p class="feature-text">Here for you, every hour, every day—because your satisfaction never clocks out.</p>
					</div>
				</div>
				
				<!-- Secure Payments Feature -->
				<div class="col-md-4">
					<div class="feature-box">
						<img src="images/104772130-removebg-preview.png" alt="Secure Payments" class="feature-icon">
						<h3 class="feature-title">Secure Payments</h3>
						<p class="feature-text">Shop with confidence—your trust and safety are our top priorities.</p>
					</div>
				</div>
			</div>
		</div>
	</section>
	
	<!-- Bestsellers Section -->
	
	<section class="bestsellers-section">
		<div class="container">
			<h2 class="section-title">Our Bestsellers</h2>
			<p class="section-subtitle">These are our assets that we sell without telling a client to think twice while buying</p>
			<div class="row">
				<% product.forEach(function(product) { %>
				<div class="col-lg-3 col-md-6">
					<div class="product-card">
						<img src="<%= product.productImage[0] %>" alt="iPhone 14 Pro Max 5G" class="product-img">
						<div class="product-rating">
							<i class="fas fa-star"></i>
							<i class="fas fa-star"></i>
							<i class="fas fa-star"></i>
							<i class="fas fa-star"></i>
							<i class="fas fa-star"></i>
						</div>
						<h4 class="product-name"><%= product.productName %></h4>
						<p class="product-price">₹<%= product.salePrice %></p>
					</div>
				</div>
				<% }); %>
			</div>
			
		</div>
	</section>
	
	<%- include("../../views/partials/user/footer") %>

</body>
</html>







