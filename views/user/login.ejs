
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Mobi World</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/user/userlogin.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> 
</head>
<body>
    <div class="login-container">
        <div class="login-form">
            <form id="form" action="/user/login" method="post">
                <h2 class="text-center">Welcome back!</h2>
                <% if (typeof message !== 'undefined' && message) { %>
                    <p id="mess" class="error-message" ><%= message %></p>
                <% } %>
                
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input name="email" class="form-control" id="email" placeholder="Enter your email">
                    <p style="color: red;" id="email-error"></p>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password">
                    <p id="passerror" style="color: red;"></p>
                </div>
                <button type="submit" id="button" class="btn btn-primary btn-block">Login</button>
                <div class="text-center mt-3">
                    <a href="/user/forgetOtp">Forgot password?</a>
                </div>
                <div class="text-center mt-3">
                    <a href="/user/auth/google" class="btn btn-outline-secondary btn-block">
                        <img src="https://img.icons8.com/color/16/000000/google-logo.png"> Sign in with Google
                    </a>
                </div>
                <div class="text-center mt-3">
                    <p>Don't have an account? <a href="/user/register">Sign Up</a></p>
                </div>
            </form>
        </div>
        <div class="login-image d-flex justify-content-center align-items-center">
            <img src="https://img.freepik.com/free-photo/smartphones-shopping-bags_23-2147957620.jpg?t=st=1740068158~exp=1740071758~hmac=a44c85ad05119c530b93489a7142ca9ea428ce013282489b23b0f5f4eaa43757&w=740" alt="Mobi World">

            <div class="logo">
                <img src="/images/mobiworld-removebg-preview.png">
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
   <script>

    


    const form = document.getElementById('form');
form.addEventListener('submit', (event) => {
    let isvalid = true;
    event.preventDefault();

    const password = document.getElementById('password').value.trim();
    const email = document.getElementById('email').value.trim();
    const passerror = document.getElementById('passerror');
    const mess = document.getElementById('email-error');

    // Reset error visibility before validation
    passerror.style.display = 'none';
    mess.style.display = 'none';

    // Email validation
    if (email === '') {
        mess.style.display = 'block'; // Show error message
        mess.innerText = 'Email required';
        isvalid = false;
    } else {
        mess.innerText = '';
    }

    // Password validation
    if (password === '') {
        passerror.style.display = 'block'; // Show error message
        passerror.innerText = 'Password required';
        isvalid = false;
    } else {
        passerror.innerText = '';
    }

    setTimeout(() => {
    if (mess) {
        mess.innerText = '';
        mess.style.display = 'none';
    }
    if (passerror) {
        passerror.innerText = '';
        passerror.style.display = 'none';
    }
}, 3000);

    // Submit the form only if valid
    if (isvalid) {
        form.submit();
    }
});
   </script>
</body>
</html>




 

