<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Signup</title>
    <link rel="stylesheet" href="/css/forgetpassusernamepage.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> 
</head>
<body>
    <div class="signup-container">
        <h1>Signup</h1>
        <form id="form" class="signup-form" method="post" action="/user/resetpassOtp">
            <label for="email">Enter email:</label>
            <input type="email" id="email" name="email">
            <% if (message) { %>
                <p class="error-message" id="mess"><%= message %></p> 
            <% } %>
            <button id="Button" type="submit" class="otp-button">Send OTP</button>
        </form>
        <p class="login-link">Already a user? <a href="/user/login">Sign in</a></p>
    </div>
    <div class="image-container">
        <img class="image" src="\images\3d-illustration-smartphone-with-store-screen-with-paper-bags-shop-online-concept.jpg" alt="Shop illustration" class="shop-image">
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        const message = document.getElementById('mess')
        setTimeout(()=>{
            if(message){
                message.style.display = 'none'
            }
        },3000)
        document.getElementById('form').addEventListener('submit', function(event){
            // Get email value
            const email = document.getElementById('email').value;
            
            // Simple email validation regex
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

            // Check if the email is valid
            if (!emailRegex.test(email)) {
                event.preventDefault(); // Prevent form submission
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid email',
                    text: 'Please enter a valid email address.'
                });
            } else {
                // If email is valid, show the SweetAlert loading spinner
                Swal.fire({
                    title: 'Sending OTP...',
                    text: 'Please wait while we send your OTP.',
                    allowOutsideClick: false,  // Disable outside clicks
                    didOpen: () => {
                        Swal.showLoading();  // Show the loading spinner
                    }
                });
            }
        });
    </script>
</body>
</html>
