<%- include("../../views/partials/user/shoppage_header") %>

    <body>
        <link rel="stylesheet" href="\css\addtocart.css">
        <!-- Cart Header -->
        <div class="cart-header">
            <div class="container">
                <h1>MY CART</h1>
            </div>
        </div>

        <!-- Cart Content -->
        <div class="container mb-5">
            <!-- Cart Items Table -->
            <div class="row">
                <div class="col-12">
                    <table class="table">
                        <thead>
                            <tr class="table-header">
                                <th style="width: 5%"></th>
                                <th style="width: 15%">Product</th>
                                <th style="width: 40%"></th>
                                <th style="width: 15%" class="text-center">Price</th>
                                <th style="width: 15%" class="text-center">Quantity</th>
                                <th style="width: 15%" class="text-center">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                            <!-- Samsung Item -->
                            <tr class="cart-item">
                                <td>
                                    <button class="remove-btn rounded">✕</button>
                                </td>
                                <td>
                                    <img src="<%= product.productImage[0] %>" alt="Samsung Galaxy S23 Ultra"
                                        class="cart-image rounded">
                                </td>
                                <td>
                                    <h5>
                                        <%= product.productName %>
                                    </h5>
                                    <!-- <p class="text-muted small">Meet the Galaxy S25 Ultra - your AI companion that adapts, anticipates, and connects seamlessly.</p> -->
                                </td>
                                <td class="text-center">
                                    <%= product.salePrice.toLocaleString('en-IN') %>
                                </td>
                                <td>
                                    <div class="quantity-control">
                                        <button class="quantity-btn rounded-start">-</button>
                                        <input id="quantityselect" type="text" value="<%= quantity %>"
                                            class="quantity-input" readonly>
                                        <button class="quantity-btn rounded-end">+</button>
                                    </div>
                                </td>
                                <td id="Total" class="text-center"> </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Cart Totals and Checkout -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Coupon Code">
                        <button class="apply-coupon-btn" type="button">Apply Coupon</button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="cart-totals">
                        <h4 class="mb-4">CART TOTALS</h4>
                        <div class="row mb-2">
                            <div class="col-6">Subtotal</div>
                            <div class="col-6 text-end">₹20.00</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6">Delivery</div>
                            <div class="col-6 text-end">₹0.00</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6">Discount</div>
                            <div class="col-6 text-end">₹0.00</div>
                        </div>
                        <div class="row mb-4 pt-2 border-top mt-2">
                            <div class="col-6 fw-bold">TOTAL</div>
                            <div class="col-6 text-end fw-bold"><%= totalPrice.toLocaleString('en-IN') %></div>
                        </div>
                        <button class="checkout-btn rounded">Proceed to Checkout</button>
                    </div>
                </div>
            </div>
        </div>
        <input id="quantity" type="hidden" value="<%= product.quantity %>">
        <input id="rate" type="hidden" value="<%= product.salePrice %>">
        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Quantity control functionality
            document.addEventListener('DOMContentLoaded', function () {
                const minusBtns = document.querySelectorAll('.quantity-btn:first-child');
                const plusBtns = document.querySelectorAll('.quantity-btn:last-child');
                const totalquantity = document.getElementById('quantity').value
                const rate = document.getElementById('rate').value
                const quantityselect = document.getElementById('quantityselect')
                const sum = rate * parseInt(quantityselect.value)
                document.getElementById('Total').innerText = sum
                minusBtns.forEach(btn => {
                    btn.addEventListener('click', function () {
                        const input = this.nextElementSibling; // Get the input element
                        let value = parseInt(input.value);

                        if (value > 1) {
                            input.value = value - 1; // First, update the value
                        }

                        const updatedValue = parseInt(input.value); // Get the updated value
                        const sum = rate * updatedValue; // Calculate new sum based on updated value
                        document.getElementById('Total').innerText = sum; // Update Total display
                    });

                });

                plusBtns.forEach(btn => {
                    btn.addEventListener('click', function () {
                        const input = this.previousElementSibling; // Get the input element
                        let value = parseInt(input.value);

                        input.value = value + 1; // First, update the value

                        const updatedValue = parseInt(input.value); // Get the updated value
                        const sum = rate * updatedValue; // Calculate new sum based on updated value
                        document.getElementById('Total').innerText = sum;
                    });


                });
            });
        </script>
    </body>

    </html>