<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 20px;
            color: #333;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            padding: 25px;
        }
        .report-header {
            background: linear-gradient(135deg, #2c3e50, #4ca1af);
            color: white;
            padding: 20px;
            border-radius: 6px 6px 0 0;
            margin-bottom: 20px;
            text-align: center;
        }
        h2 {
            margin: 0;
            font-size: 28px;
        }
        .date-range {
            background-color: #f5f7fa;
            padding: 10px 15px;
            border-radius: 5px;
            border-left: 4px solid #4ca1af;
            margin-bottom: 20px;
            font-size: 16px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            font-size: 14px;
        }
        th, td {
            border: 1px solid #e3e3e3;
            padding: 12px 10px;
            text-align: center;
        }
        th {
            background-color: #4ca1af;
            color: white;
            font-weight: 600;
            position: sticky;
            top: 0;
        }
        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tbody tr:hover {
            background-color: #f1f7fa;
        }
        .summary-row {
            font-weight: bold;
            background-color: #2c3e50 !important;
            color: white;
        }
        .currency {
            font-family: monospace;
            text-align: right;
        }
        .quantity {
            text-align: center;
        }
        .payment-cash {
            color: #2ecc71;
        }
        .payment-card {
            color: #3498db;
        }
        .payment-upi {
            color: #9b59b6;
        }
        footer {
            margin-top: 20px;
            text-align: center;
            font-size: 12px;
            color: #7f8c8d;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="report-header">
            <h2>Sales Report</h2>
        </div>
        
        <% if (date && date.from && date.to) { %>
        <div class="date-range">
            <strong>Period:</strong> <%= new Date(date.from).toLocaleDateString() %> to <%= new Date(date.to).toLocaleDateString() %>
        </div>
        <% } %>
        
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Product</th>
                    <th>Brand</th>
                    <th>Payment Method</th>
                    <th>Price (₹)</th>
                    <th>QTY</th>
                    <th>Discount (₹)</th>
                    <th>Coupon (₹)</th>
                    <th>Total (₹)</th>
                </tr>
            </thead>
            <tbody>
                <% 
                let grandTotal = 0;
                let totalQuantity = 0;
                
                orders.forEach(order => {
                    // Add total once per order (not per item!)
                    grandTotal += (order.totalPrice || 0) - ((order.discount || 0) + (order.couponDiscount || 0));
                
                    order.orderedItems.forEach(item => {
                        if (item.returnStatus !== "Returned") {
                            totalQuantity += item.quantity;
                        }
                
                        let paymentClass = "";
                        if (order.paymentMethod === "Online Payment") paymentClass = "payment-cash";
                        else if (order.paymentMethod === "Cash on delivery") paymentClass = "payment-cod";
                        else if (order.paymentMethod === "wallet") paymentClass = "payment-wallet";
                %>
                <tr>
                    <td><%= order.orderId %></td>
                    <td><%= item.product.productName %></td>
                    <td><%= item.product.brand.brandName %></td>
                    <td class="<%= paymentClass %>"><%= order.paymentMethod %></td>
                    <td class="currency"><%= item.price.toFixed(2) %></td>
                    <td class="quantity"><%= item.quantity %></td>
                    <td class="currency"><%= order.discount.toFixed(2) %></td>
                    <td class="currency"><%= order.couponDiscount.toFixed(2) %></td>
                    <td class="currency"><%= (order.totalPrice-order.discount-order.couponDiscount).toFixed(2) %></td>
                </tr>
                <% 
                    });
                });
                %>
                <tr class="summary-row">
                    <td colspan="5">Grand Totals</td>
                    <td class="quantity"><%= totalQuantity %></td>
                    <td colspan="2"></td>
                    <td class="currency">₹<%= grandTotal.toFixed(2) %></td>
                </tr>
            </tbody>
        </table>
        
        <footer>
            <p>Generated on <%= new Date().toLocaleString() %></p>
        </footer>
    </div>
</body>
</html>